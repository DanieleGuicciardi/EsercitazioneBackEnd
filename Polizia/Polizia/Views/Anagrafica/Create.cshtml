@model Anagrafica

<h2>Aggiungi Trasgressore</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Cognome</label>
        <input type="text" asp-for="Cognome" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Nome</label>
        <input type="text" asp-for="Nome" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Indirizzo</label>
        <input type="text" asp-for="Indirizzo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Città</label>
        <input type="text" asp-for="Citta" class="form-control" />
    </div>

    <div class="form-group">
        <label>CAP</label>
        <input type="text" asp-for="CAP" class="form-control" />
    </div>

    <div class="form-group">
        <label>Codice Fiscale</label>
        <input type="text" asp-for="Cod_Fisc" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
